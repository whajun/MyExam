#include <stdio.h>
#include <stdlib.h> // srand(), rand() í•¨ìˆ˜ ì‚¬ìš©ì„ ìœ„í•´ í•„ìš”
#include <time.h>   // time() í•¨ìˆ˜ ì‚¬ìš©ì„ ìœ„í•´ í•„ìš”

int main(void) {
    int lotto_numbers[6];
    int i, j;

    // 1. ë‚œìˆ˜ ìƒì„±ê¸° ì‹œë“œ ì„¤ì •
    srand((unsigned int)time(NULL));

    printf("ë¡œë˜ ë²ˆí˜¸ ìƒì„±ê¸° ğŸ²\n");

    for (i = 0; i < 6; i++) {
        // 2. 1 ~ 45 ì‚¬ì´ì˜ ë‚œìˆ˜ ìƒì„±
        int new_num = rand() % 45 + 1;

        // 3. ì¤‘ë³µ ê²€ì‚¬
        for (j = 0; j < i; j++) {
            if (lotto_numbers[j] == new_num) {
                i--; // ì¤‘ë³µëœ ê²½ìš°, í˜„ì¬ ìˆœì„œë¥¼ ë‹¤ì‹œ ë½‘ê¸° ìœ„í•´ ië¥¼ 1 ê°ì†Œ
                break;
            }
        }

        // ì¤‘ë³µì´ ì•„ë‹ ê²½ìš°ì—ë§Œ ë°°ì—´ì— ìˆ«ì ì €ì¥
        if (j == i) {
            lotto_numbers[i] = new_num;
        }
    }

    // 4. ì˜¤ë¦„ì°¨ìˆœ ì •ë ¬ (ë²„ë¸” ì •ë ¬)
    for (i = 0; i < 5; i++) {
        for (j = i + 1; j < 6; j++) {
            if (lotto_numbers[i] > lotto_numbers[j]) {
                int temp = lotto_numbers[i];
                lotto_numbers[i] = lotto_numbers[j];
                lotto_numbers[j] = temp;
            }
        }
    }

    // 5. ìµœì¢… ë²ˆí˜¸ ì¶œë ¥
    printf("ìƒì„±ëœ ë²ˆí˜¸: ");
    for (i = 0; i < 6; i++) {
        printf("%d ", lotto_numbers[i]);
    }
    printf("\n");

    return 0;
}
